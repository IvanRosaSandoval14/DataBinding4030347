<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding4030347.MainPage"
             xmlns:local="clr-namespace:DataBinding4030347">
    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <StackLayout>
      
        <Entry x:Name="NombreDelAlumno" Text="{Binding Nombre}" Placeholder="Ingrese su Nombre"/>
        
        <Label Text="{Binding MostrarNombre}"/>
    </StackLayout>
</ContentPage>
